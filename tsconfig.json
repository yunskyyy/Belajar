{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/app/*": ["./app/*"],
      "@/assets/*": ["./assets/*"],
      "@/components/*": [ "./components/*"],
      "@/constants/*": ["./constants/*"],
      "@/contexts/*": ["./contexts/*"],
      "@/enums/*": ["./enums/*"],
      "@/helpers": ["./helpers/index.ts"],
      "@/hooks/*": ["./hooks/*"],
      "@/lib/*": ["./lib/*"],
      "@/normalizers": ["./normalizers/index.ts"],
      "@/pages/*": ["./pages/*"],
      "@/stores/*": ["./stores/*"],
      "@/styles/*": ["./styles/*"],
      "@/types/*": ["./types/*"],
      "@/utils": ["./utils/index.ts"],
      "@/views/*": ["./views/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.js",
    "tailwind.config",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
